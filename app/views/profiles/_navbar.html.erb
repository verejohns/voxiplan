<style>
  .badge:hover {
      color: white;
  }
</style>
<!--begin::Navbar-->
<div class="card mb-5 mb-xl-10">
  <div class="card-body d-flex flex-wrap align-items-end justify-content-between py-0 px-3">
    <!--begin::Details-->
    <div class="d-flex align-items-md-center py-3">
      <!--begin: Pic-->
      <div class="me-7">
        <div class="symbol symbol-60px symbol-fixed position-relative">
          <img src="<%= current_client.avatar.exists? ? current_client.avatar.url : asset_path('blank') %>" alt="image"/>
          <div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-white h-20px w-20px"></div>
        </div>
      </div>
      <!--end::Pic-->
      <!--begin::Info-->
      <div class="flex-grow-1">
        <!--begin::Title-->
        <div class="d-flex justify-content-between align-items-start flex-wrap">
          <!--begin::User-->
          <div class="d-flex flex-column">
            <!--begin::Name-->
            <div class="d-flex align-items-center mb-1">
              <span class="text-gray-900 fs-2 fw-bolder me-1"><%= current_client.full_name %></span>
            </div>
            <!--end::Name-->
            <!--begin::Info-->
            <div class="d-flex flex-wrap fw-bold fs-6">
              <span class="d-flex align-items-center text-gray-400 mb-2 me-2"><%= current_client.email %></span>
              <% if @isVerified %>
                <span class="badge badge-success mb-2"><%= t('common.badge.verified') %></span>
              <% else %>
                <a class="badge badge-danger mb-2" href="<%=ENV['ORY_URL'] + '/self-service/verification/browser' %>"><%= t('common.badge.verify') %></a>
              <% end %>
            </div>
            <!--end::Info-->
          </div>
          <!--end::User-->
        </div>
        <!--end::Title-->
      </div>
      <!--end::Info-->
    </div>
    <!--end::Details-->
    <!--begin::Navs-->
    <div class="d-flex overflow-auto h-45px h-md-80px">
      <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder flex-nowrap">
        <li class="nav-item">
          <a class="nav-link text-nowrap text-active-primary me-6 <%= @profile_section == 'overview' ? 'active' : '' %>" href="<%= profile_path('overview') %>"><%= t('profile.overview_title') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-nowrap text-active-primary me-6 <%= @profile_section == 'settings' ? 'active' : '' %>" href="<%= @isVerified ? ENV['ORY_URL'] + '/self-service/settings/browser' : profile_path('overview') %>"><%= t('profile.setting_title') %></a>
        </li>
      </ul>
    </div>
    <!--begin::Navs-->
  </div>
</div>
<!--end::Navbar-->

