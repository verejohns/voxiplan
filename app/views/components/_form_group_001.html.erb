<%# variables %>
<% field = yield %>
<% name = local_assigns.fetch(:name) %>
<% label = local_assigns.fetch(:label, name.to_s.titlecase) %>
<%# end variables %>



<%= content_tag :div, class: "form-group row #{has_error_on(name)}" do %>
  <label class="col-xl-3 col-lg-3 col-form-label"><%= label %></label>
  <div class="col-lg-9 col-xl-6">
    <%= field %>
  </div>
<% end %>
