<div class="tab-pane active" id="tab_personal" role="tabpanel">
  <div class="row">
    <label class="col-xl-3"></label>
    <div class="col-lg-9 col-xl-6">
      <h3 class="kt-section__title kt-section__title-sm">Personal Information:</h3>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">First Name</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :first_name, autofocus: true, placeholder: t('placeholders.first_name', default: 'First name'), class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Last Name</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :last_name, autofocus: true, placeholder: t('placeholders.last_name', default: 'Last name'), class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Company</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :company, placeholder: t('placeholders.company', default: 'company'), class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Industry</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.select :industry, industries, {autocomplete: "off", placeholder: t('placeholders.industry', default: 'industry')}, class: "form-control m-input", style: "padding: 0.5em 0;" %>
    </div>
  </div>
  
  <div class="kt-separator kt-separator--border-dashed kt-separator--portlet-fit kt-separator--space-lg"></div>

  <div class="row">
    <label class="col-xl-3"></label>
    <div class="col-lg-9 col-xl-6">
      <h3 class="kt-section__title kt-section__title-sm">Contact Address:</h3>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Address 1</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :address_one, autofocus: true, class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Address 2</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :address_two, autofocus: true, class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">city</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :city, autofocus: true, class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">State</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :state, autofocus: true, class: "form-control m-input" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Zip</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :zip, autofocus: true, class: "form-control m-input" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-xl-3 col-lg-3 col-form-label">Country</label>
    <div class="col-lg-6 col-xl-6">
      <%= f.text_field :country, class: "form-control m-input", id: "country" %>
      <%= f.hidden_field :country_code, class: "form-control m-input", id: "country_code" %>
    </div>
  </div>


</div>
<script>
  $("#country").countrySelect();
  // $("#country").countrySelect("selectCountry", "<%= current_client.country_code %>");
</script>
